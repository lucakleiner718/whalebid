<div class="container">
  	</br>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form'}) do |f| %>
		<div class="panel panel-primary">
	      	<div class="panel-heading">
	        	<h3 class="panel-title">Enter the login credentials below.</h3>
	      	</div>

			<%= devise_error_messages! %>

	      	<div class="well">
				<div class="row form-group">
		            <%= f.label :email, class: "col-sm-2 text-right" %>
		            <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "col-sm-5" %>
		        </div>

				<div class="row form-group">
		            <%= f.label :password, class: "col-sm-2 text-right" %>
		            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "col-sm-5" %>
		        </div>

				<% if devise_mapping.rememberable? -%>
					<div class="row form-group col-sm-offset-2">
						<%= f.check_box :remember_me %> <%= f.label :remember_me %>
					</div>
				<% end %>

				<div class="row form-group col-sm-offset-2"><%= f.submit "Sign in", class: "btn btn-primary btn-lg" %></div>
			</div>
		</div>

		
	<% end %>
	<br/>
</div>
